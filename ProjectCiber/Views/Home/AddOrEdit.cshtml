                    <select class="form-control" asp-for="CustomerId"  asp-items="@(new SelectList(@ViewData["listDataCustomers"] as List<Customer>,"Id","Name"))">
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2">
                <label class="col-sm-3 col-form-label lable_class">Order Date</label>
                <div class="col-sm-9">
                    <input class="form-control" type="date" asp-for="OrderDate" />
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-2 mb-2">
                <label class="col-sm-3 col-form-label lable_class">Amount</label>
                <div class="col-sm-9">
                    <input class="form-control" type="number" asp-for="Amount" />
                    <span class="text-danger"></span>
                </div>
            </div>


