

@model List<ProjectCiber.Models.ViewModels.OrderViewModel>
@{
    ViewData["Title"] = "Home Page";


}

<div class="col-8 col-sm-8 mt-2">
    <form class="form-group row has-feedback has-feedback-left"  asp-action="Index" asp-controller="Home">
        <label class="col-sm-4 col-form-label lable_class">Enter catagory to Search</label>
        <div class="col-sm-6">
            <input class="form-control" type="text" id="search" name="search" value="@ViewData["GetOrderdetail"]">
        </div>
        <button class="btn-primary btn-sm col-sm-2" type="submit">Search</button>
    </form>

</div>

<button class="btn-primary btn-sm" data-target="#form-modal" data-toggle="modal" data-backdrop="static" type="submit" onclick="showInPopup1('@Url.Action("AddOrEdit","Home",null,Context.Request.Scheme)','New Order')">Add Order</button>


<div class="table-responsive-sm table1" style="overflow: auto; display: block; white-space: nowrap;">
    <table class="table">
        <thead>
        <th>Product Name</th>
        <th>Catagory Name</th>
        <th>Customer Name</th>
        <th>Order Date</th>
        <th>Amount</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.CatagoryName
                </td>
                <td>
                    @item.OrderDate
                </td>
                <td>
                    @item.Amount
                <td>
                    <div>
                        <a onclick="showInPopup1('@Url.Action("AddOrEdit","Home",new {id=item.Id},Context.Request.Scheme)','Update Order')" class="btn btn-sm btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>
                        <form asp-action="Delete" asp-controller="Home" method="post" onsubmit="return DeleteOrder(this);" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="submit" value="Delete" class="btn-sm btn btn-danger" />
                        </form>
                    </div>
                </td>

            </tr>
            }

        </tbody>

    </table>
</div>